// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model readings {
  id                Int      @id @default(autoincrement())
  mmol_l            Float
  trend_arrow       String
  trend_description String
  datetime          DateTime

  @@unique([datetime])
}

model Ingredient {
  id                 Int    @id @default(autoincrement())
  name               String
  brand_vendor       String
  protein            Float
  fat                Float
  carbohydrate       Float
  sugar              Float
  fibre              Float
  avg_serving_units  Float?
  avg_serving_weight Float?
  Meal               Meal?  @relation(fields: [mealId], references: [id])
  mealId             Int?

  @@unique([name, brand_vendor])
}

model Meal {
  id          Int          @id @default(autoincrement())
  name        String
  ingredients Ingredient[]
}
